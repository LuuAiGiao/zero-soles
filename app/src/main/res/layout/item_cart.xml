<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cart_badge"
        android:layout_width="28dp"
        android:layout_height="22dp"
        android:layout_gravity="right|end|top"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/badge_background"
        android:gravity="center"
        android:padding="3dp"
        android:text="x 1"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/img"
        app:layout_constraintTop_toTopOf="@+id/img" />

    <TextView
        android:id="@+id/tvShoeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShoeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="White"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvShoeStyle2"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintStart_toEndOf="@+id/tvShoeStyle2" />

    <TextView
        android:id="@+id/tvShoeStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Style: "
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintStart_toStartOf="@+id/tvShoeName"
        app:layout_constraintTop_toBottomOf="@+id/tvShoeName" />

    <TextView
        android:id="@+id/tvShoeSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="6.5"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintStart_toEndOf="@+id/tvShoeSize2"
        app:layout_constraintTop_toTopOf="@+id/tvShoeSize2" />

    <TextView
        android:id="@+id/tvShoeSize2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Size: "
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintStart_toStartOf="@+id/tvShoeName"
        app:layout_constraintTop_toBottomOf="@+id/tvShoeStyle2" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="$49.99"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintStart_toStartOf="@+id/tvShoeSize2"
        app:layout_constraintTop_toBottomOf="@+id/tvShoeSize2" />

    <TextView
        android:id="@+id/tvRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="@string/remove"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTotal"
        app:layout_constraintStart_toEndOf="@+id/tvTotal" />

</androidx.constraintlayout.widget.ConstraintLayout>